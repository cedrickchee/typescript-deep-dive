    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon launch server",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nodemon",
            "program": "${workspaceFolder}/client/build/HelloWorld.js",
            "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "launch app",
            "program": "${workspaceFolder}/client/HelloWorld.ts",
            "runtimeExecutable": "${env:HOME}/.nvm/versions/node/v8.11.3/bin/node",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        }
    ]
}